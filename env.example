# Django Settings
DEBUG=True
SECRET_KEY=secret-key-placeholder
ALLOWED_HOSTS=localhost,127.0.0.1

# Database - PostgreSQL with peer socket auth
DB_ENGINE=django.db.backends.postgresql
DB_NAME=
DB_USER=
DB_PASSWORD=
DB_HOST=/var/run/postgresql
DB_PORT=

# Email Settings - Amazon SES SMTP (or Gmail SMTP)
# For development, you can use: django.core.mail.backends.console.EmailBackend
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
SMTP_SERVER=
SMTP_PORT=
SMTP_USERNAME=
SMTP_PASSWORD=
FROM_EMAIL=

# Cloudflare Turnstile - Get keys from https://dash.cloudflare.com/
# 1. Go to Cloudflare Dashboard
# 2. Select your domain
# 3. Navigate to Turnstile in the left sidebar
# 4. Create a new site and copy the Site Key and Secret Key
TURNSTILE_SITE_KEY=
TURNSTILE_SECRET_KEY=

# CSRF & Security Settings for HTTPS
CSRF_TRUSTED_ORIGINS=https://localhost,https://127.0.0.1
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_HSTS_SECONDS=0
